<div class="container center-align">
	<div class="col s12 m6">
		<img src="../assets/img/fiveguysburger.jpg" alt="burger" class="responsive-img" />
		<h1> Eat-Da-Burger! </h1>
	</div>
</div>
<div class="row">
	<div class="col s12 m6 left-align">
		{{#each burger_data}}
			{{#unless this.devoured}}
				<div class="col s12">
					<h6>{{this.id}}. {{this.burger_name}}</h6>
				</div>
				<div class="col s12">
					<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
						<input input type="hidden" type="text" name="burger_id" value= {{this.id}}><br>
						<input input type="hidden" type="text" name="devoured" value= {{this.devoured}}><br>
						<button type="submit" class="waves-effect waves-light btn  blue darken-3">Devour it!<i class="material-icons left">local_dining</i></button>
					</form>
				</div>
			{{/unless}}
		{{/each}}
	</div>
	<div class="col s12 m6">
		{{#each burger_data}}
			{{#if this.devoured}}
				<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
				<div class="col s12">
					<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
						<input input type="hidden" type="text" name="burger_id" value= {{this.id}}><br>
						<input input type="hidden" type="text" name="devoured" value= {{this.devoured}}><br>
						<button type="submit" class="waves-effect waves-light btn  blue darken-3">Order Again!<i class="material-icons left">local_dining</i></button>
					</form>
				</div>
			{{/if}}
		{{/each}}
	</div>
</div>

<div class="row col s12 center-align">
	<form action="/burgers/create" method="POST" class="col s12">
		<div class="row input-field col s6">
			<i class="material-icons prefix blue-text text-darken-3">mode_edit</i>
			<input type="text" class="form-control" name="burger_name" placeholder="Good Burger" id="enter_text">

			</input>
			<button type="submit" class="btn waves-effect waves-light blue darken-3" id="text-enter-button">
					Submit<i class="material-icons right">send</i>
			</button>
	</form>
	<p>Enter a burger you want to eat Click the "Submit" button.</p>
	</div>
</div>
